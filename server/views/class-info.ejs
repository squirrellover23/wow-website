<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Class Info</title>
        <link rel="stylesheet" href="/stylesheets/class-info.css" />
    </head>
    <body>
        <div id="header-container"></div>
        <script>
            fetch("/header.html")
                .then((response) => response.text())
                .then((html) => {
                    document.getElementById("header-container").innerHTML =
                        html;
                });
        </script>

        <h1>
            <%= classInfo.className %><%= classInfo.archived ? ' (Archived)' :
            '' %>
        </h1>

        <div id="button-container">
            <div id="change-name">
                <h3 id="change-name-title">Change name:</h3>
                <form id="change-name-form" action="/editclass" method="post">
                    <input
                        type="hidden"
                        name="oldClassName"
                        value="<%= classInfo.className %>"
                    />

                    <input
                        type="text"
                        name="newClassName"
                        value="<%= classInfo.className %>"
                        class="bigger-input-text"
                        required
                    />

                    <button type="submit" class="basic-button">Update</button>
                </form>
            </div>
            <div>
                <% if (!classInfo.archived) {%>
                <form
                    class="button-form"
                    id="archive-class-button"
                    action="/archiveclass"
                    method="post"
                    onsubmit="return confirmChange('archive');"
                >
                    <input
                        type="hidden"
                        name="className"
                        value="<%= classInfo.className %>"
                    />
                    <button type="submit" class="delete-button">Archive</button>
                </form>
                <% } else { %>
                <form
                    class="button-form"
                    id="unarchive-class-button"
                    action="/unarchiveclass"
                    method="post"
                    onsubmit="return confirmChange('unarchive');"
                >
                    <input
                        type="hidden"
                        name="className"
                        value="<%= classInfo.className %>"
                    />
                    <button type="submit" class="basic-button">
                        Unarchive
                    </button>
                </form>
                <% }%>
                <form
                    class="button-form"
                    action="/deleteclass"
                    method="post"
                    onsubmit="return confirmChange('delete');"
                >
                    <input
                        type="hidden"
                        name="className"
                        value="<%= classInfo.className %>"
                    />
                    <button type="submit" class="delete-button">Delete</button>
                </form>
            </div>
        </div>
        <h3 id="attendance-tag">Total Attendance: <%= attendance.length %></h3>
        <% if (attendance.length > 0) { %>
        <table id="login-table">
            <tr>
                <th>Student</th>
                <th>Login Time</th>
            </tr>
            <% attendance.reverse().forEach(attempt => { %>
            <tr>
                <td>
                    <a
                        href="/user/<%= attempt.firstName %>/<%= attempt.lastName %>"
                        ><%= attempt.firstName %> <%= attempt.lastName %></a
                    >
                </td>
                <td><%= attempt.login_time %></td>
            </tr>
            <% }); %>
        </table>
        <% } else { %>
        <p id="no-attendance">No attendance Records</p>
        <% } %>

        <script>
            function get_time(time) {
                return new Date(time).toLocaleString();
            }
            let table = document.getElementById("login-table");
            if (table) {
                for (let i = 1; i < table.rows.length; i++) {
                    let row = table.rows[i];
                    let cell = row.cells[row.cells.length - 1];
                    cell.innerHTML = get_time(cell.innerHTML);
                }
            }
            function confirmChange(text) {
                return confirm(`Are you sure you want to ${text} this class?`);
            }
        </script>
    </body>
</html>
