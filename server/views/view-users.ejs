<!DOCTYPE html>
<html>
<head>
    <title>View Students</title>
    <link rel="stylesheet" href="stylesheets/view-users.css">
    
</head>
<body>
    <div id="header-container"></div>

    <h1>Students</h1>
    <script>
        // Fetch and insert the header using JavaScript
        fetch('header.html')
            .then(response => response.text())
            .then(html => {
                document.getElementById('header-container').innerHTML = html;
            });
    </script>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Classes Since Voucher</th>
                <th>Record Voucher</th>
                <th>Delete</th> 
            </tr>
        </thead>
        <% users.forEach(function(user) { %>
        
            <tr class="<%= (user.visits_since_vouch >= 16) ? 'red-row' : '' %>">

                <td><a href="/user/<%= user.firstName %>/<%= user.lastName %>"><%= user.firstName %></a></td>
                <td><a href="/user/<%= user.firstName %>/<%= user.lastName %>"><%= user.lastName %></a></td>
                <td>
                    <%= user.visits_since_vouch %>
                    <!-- <form action="/updatevisits" method="post">
                        <input type="hidden" name="firstName" value="<%= user.firstName %>">
                        <input type="hidden" name="lastName" value="<%= user.lastName %>">
                         Increase the size and font of the input box 
                        <input type="number" name="visits" value="<%= user.visits_since_vouch %>" class="bigger-input">
                        <button type="submit">Update</button>
                    </form> -->
                    <button class="edit-user" onclick="window.location.href = '/user/<%= user.firstName %>/<%= user.lastName %>'">Edit</button>
                </td>
                <td>
                    <form action="/givevoucher" method="post">
                        <input type="hidden" name="firstName" value="<%= user.firstName %>">
                        <input type="hidden" name="lastName" value="<%= user.lastName %>">
                        <button type="submit" class="<%= (user.visits_since_vouch >= 16) ? 'green-button' : 'voucher-button' %>">Record Voucher</button>
                    </form>
                </td>
                <td>
                    <form action="/deleteuser" method="post" onsubmit="return confirmDelete();">
                        <input type="hidden" name="firstName" value="<%= user.firstName %>">
                        <input type="hidden" name="lastName" value="<%= user.lastName %>">
                        <button type="submit" class="delete-button">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>


<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this Student?');
    }
</script>
</html>