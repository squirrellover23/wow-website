<!DOCTYPE html>
<html>
<head>
    <title>Classes</title>
    <link rel="stylesheet" href="stylesheets/classes.css">
</head>
<body>
    <div id="header-container"></div>
    <script>
        // Fetch and insert the header using JavaScript
        fetch('header.html')
            .then(response => response.text())
            .then(html => {
                document.getElementById('header-container').innerHTML = html;
            });
    </script>
    <h1>All Classes</h1>
    <div class="container">
        <% [[registeredClasses, 'Enrolled'], [unregisteredClasses, 'Open Enrollment']].forEach((classStuff) => { const [classes, name] = classStuff %>
        <div class="table-container">
            <h2><%= name %></h2>
            <% if (registeredClasses.length > 0) { %>
                <table class="class-table">
                    <thead>
                        <tr>
                            <th>Class Name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% classes.forEach(function(classItem) { %>
                            <tr>
                                <td>
                                    <span id="className_<%= classItem.id %>"><%= classItem.className %></span>
                                </td>
                                <td>
                                    <button id="editButton_<%= classItem.id %>" onclick="toggleEditForm('<%= classItem.id %>')">Edit</button>
                                    <form id="editForm_<%= classItem.id %>" action="/editclass" method="post" style="display: none;">
                                        <input type="hidden" name="oldClassName" value="<%= classItem.className %>">
                                        <label for="editClassName">Edit Name:</label>
                                        <input type="text" id="editClassName_<%= classItem.id %>" name="editClassName" required>
                                        <br>
                                        <button type="submit">Save</button>
                                        <button type="button" class="cancel-button" onclick="cancelEditForm('<%= classItem.id %>')">Cancel</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="/deleteclass" method="post" onsubmit="return confirmDelete();">
                                        <input type="hidden" name="className" value="<%= classItem.className %>">
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                </td>                        
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No <%= name %> Classes.</p>
            <% } %>
        </div>
        <% }) %>

    </div>

    <div class="form-container">
        <form class="add-class" method="post" action="/add-class">
            <h3 id="noMargin">Add New Class</h3>
            <label for="className">Class Name:</label>
            <input type="text" id="className" name="className" required>
            <br>
            <label for="registered">Enrollment:</label>
            <select id="registered" name="registered" required>
                <option value="" disabled selected>Select an option</option>
                <option value="true">Enrolled</option>
                <option value="false">Open Enrollment</option>
            </select>
            <br>
            <button type="submit">Add Class</button>
        </form>
    </div>
    <br>
    <br>
</body>
<script>
    function toggleEditForm(classId) {
        const classNameSpan = document.getElementById(`className_${classId}`);
        const editForm = document.getElementById(`editForm_${classId}`);
        const editClassNameInput = document.getElementById(`editClassName_${classId}`);
        const editButton = document.getElementById(`editButton_${classId}`);

        // Toggle visibility
        if (editForm.style.display === 'none') {
            // Show the form and hide the button
            editForm.style.display = 'block';
            editClassNameInput.value = classNameSpan.innerText; // Set the current class name in the input field
            editButton.style.display = 'none'; // Hide the "Edit" button
        } else {
            // Hide the form and show the button
            editForm.style.display = 'none';
            editButton.style.display = 'inline'; // Show the "Edit" button
        }
    }
    
    function cancelEditForm(classId) {
        const editForm = document.getElementById(`editForm_${classId}`);
        const editButton = document.getElementById(`editButton_${classId}`);

        // Hide the form and show the button
        editForm.style.display = 'none';
        editButton.style.display = 'inline'; // Show the "Edit" button
    }

    function confirmDelete() {
        return confirm('Are you sure you want to delete this class?');
    }
</script>




</html>